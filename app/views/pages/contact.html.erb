<div class="container mt-5">
  <h1>Contact Us</h1>

  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_with url: contact_path, method: :post, local: true do %>
    <div class="mb-3">
      <label class="form-label">Name</label>
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter your name" %>
    </div>

    <div class="mb-3">
      <label class="form-label">Email</label>
      <%= email_field_tag :email, nil, class: "form-control", placeholder: "Enter your email" %>
    </div>

    <div class="mb-3">
      <label class="form-label">Message</label>
      <%= text_area_tag :message, nil, class: "form-control", rows: 4, placeholder: "Write your message here" %>
    </div>

    <%= submit_tag "Send", class: "btn btn-primary" %>
  <% end %>
</div>
